@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.Name</h1><br />

    <form method="post">
        <div class="row">
            <div class="col">
                <label asp-for="Address.Street"></label>
                <input asp-for="Address.Street" />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Address.Street"></label>
                <input asp-for="Address.Number" />
                <span asp-validation-for="Address.Number" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Address.Street"></label>
                <input asp-for="Address.ZipCode" />
                <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Address.Street"></label>
                <input asp-for="Address.City" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
        </div>
        <br /><br />
        <button class="btn btn-primary" type="submit">Zatwierdź</button>
    </form>

</div>
